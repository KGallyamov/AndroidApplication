<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#353E4f"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70sp"
            android:background="@drawable/toolbar"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="15"
                android:fontFamily="monospace"
                android:gravity="center_vertical"
                android:paddingStart="10dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:text="@string/personal_account"
                android:textAlignment="center"
                android:textColor="#C4B7B7"
                android:textSize="25sp">

            </TextView>

            <Button
                android:id="@+id/exit123456"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button"
                android:text="Exit"
                android:textColor="@color/white"
                android:textSize="25sp">

            </Button>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/avatar"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:layout_gravity="left"
                android:paddingTop="30sp"
                android:paddingBottom="30sp"
                android:src="@drawable/sigma8">

            </ImageView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/login"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginTop="5sp"
                        android:text="Login"
                        android:textAllCaps="false"
                        android:textColor="#C4B7B7"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/rating"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="5sp"
                        android:layout_marginRight="10dp"
                        android:text="0"
                        android:textAlignment="textEnd"
                        android:textAllCaps="false"
                        android:textColor="#F3EDED"
                        android:textSize="20sp" />
                </RelativeLayout>


                <TextView
                    android:id="@+id/role"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:layout_marginTop="15sp"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:paddingRight="25sp"
                    android:text="role"
                    android:textAllCaps="false"
                    android:textColor="#03A9F4"
                    android:textSize="15sp" />


            </LinearLayout>


        </LinearLayout>

        <RelativeLayout
            android:id="@+id/friends_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:paddingStart="5dp"
            android:paddingEnd="10dp">

            <TextView
                android:id="@+id/friends"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:text="@string/friends"
                android:textColor="#C4B7B7"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/number_of_friends"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text=""
                android:textColor="#03A9F4"
                android:textSize="20sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:paddingStart="5dp"
            android:paddingEnd="10dp">

            <TextView
                android:id="@+id/posts_send"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:text="@string/posts_send"
                android:textColor="#C4B7B7"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/posts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text="10"
                android:textColor="#03A9F4"
                android:textSize="20sp" />
        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginLeft="5sp"
            android:layout_marginTop="20sp"
            android:layout_marginRight="10sp">

            <TextView
                android:id="@+id/password"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="9"
                android:gravity="center_vertical"
                android:paddingRight="5sp"
                android:text="@string/password_str"
                android:textAllCaps="false"
                android:textColor="#B6AFAF"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/new_password"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10sp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="20sp"
                android:layout_marginBottom="5dp"
                android:layout_weight="9"
                android:background="@drawable/fields"
                android:gravity="center_vertical"
                android:hint="@string/enter_new_password"
                android:inputType="textPassword"
                android:paddingRight="10sp"
                android:textAllCaps="false"
                android:textColor="#000000"
                android:textColorHint="#5F5F5B"
                android:textSize="20sp"
                android:visibility="gone" />


            <Button
                android:id="@+id/look_password"
                android:layout_width="72dp"
                android:layout_height="match_parent"
                android:background="@drawable/ic_visibility_unactive_24dp" />

            <Button
                android:id="@+id/confirm"
                android:layout_width="72dp"
                android:layout_height="match_parent"
                android:background="@drawable/ic_done_black_24dp"
                android:visibility="gone" />

        </LinearLayout>

        <TextView
            android:id="@+id/change"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10sp"
            android:paddingTop="10sp"
            android:text="Change password"
            android:textColor="#03A9F4"
            android:textSize="15sp">

        </TextView>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/users_posts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


    </LinearLayout>


</ScrollView>