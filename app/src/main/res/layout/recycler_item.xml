<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="2dp"
    android:elevation="4dp"
    app:cardCornerRadius="2dp"
    app:cardBackgroundColor="#455470"

    app:cardUseCompatPadding="true">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:padding="3dp">
        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/author_avatar"
                android:layout_marginTop="3dp"
                android:layout_alignParentStart="true"
                android:src="@drawable/sigma"
                android:layout_width="50dp"
                android:layout_height="50dp"/>

            <TextView
                android:id="@+id/author"
                android:text="mirakpjcppr"
                android:layout_width="150dp"
                android:textSize="15sp"
                android:layout_marginLeft="55dp"
                android:fontFamily="monospace"
                android:padding="3sp"
                android:textColor="#C4B7B7"
                android:layout_marginBottom="7sp"
                android:layout_marginTop="5dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/heading"
                android:fontFamily="monospace"
                android:textColor="#464C4E"
                android:padding="3sp"
                android:layout_marginRight="35dp"
                android:text="Programming"
                android:layout_alignParentRight="true"
                android:textAlignment="textEnd"
                android:layout_marginBottom="7sp"
                android:layout_marginTop="5dp"
                android:textSize="15sp">

            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/save_to_favorite"
                android:layout_marginTop="7sp"
                android:layout_marginRight="2sp"
                android:layout_alignParentRight="true"
                android:background="@drawable/ic_star_border_black_24dp"
                android:textAppearance="@android:style/TextAppearance.Large"

                android:paddingLeft="10dp">
            </TextView>

        </RelativeLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtTitle"
            android:fontFamily="monospace"
            android:layout_below="@+id/heading"
            android:text="Title"
            android:textColor="#C4B7B7"
            android:textSize="20dp"
            android:textAppearance="@android:style/TextAppearance.Large">

        </TextView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtDescription"
            android:text="Description"
            android:textSize="15dp"
            android:textColor="#C4B7B7"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:layout_below="@id/picture">
        </TextView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/image_link"
            android:text=""
            android:visibility="gone"
            android:layout_below="@id/picture">
        </TextView>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:id="@+id/picture"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            android:src="@drawable/ic_launcher_foreground"
            android:layout_below="@id/txtTitle">
        </ImageView>


        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_marginTop="5sp"
            android:layout_height="wrap_content">

            <RatingBar
                android:id="@+id/rating"
                style="?android:attr/ratingBarStyle"
                android:theme="@style/MyRatingBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/middle_rating"
                android:textColor="#C4B7B7"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10sp"
                android:layout_alignParentEnd="true">

            </TextView>
        </RelativeLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>