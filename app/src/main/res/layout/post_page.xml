<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#353E4f"
    android:paddingTop="4dp"
    android:paddingBottom="4dp"
    android:paddingLeft="5dp"
    android:paddingRight="5dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4sp"
        android:orientation="vertical">

        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_marginTop="5sp"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/author_avatar"
                android:layout_marginTop="3dp"
                android:layout_alignParentStart="true"
                android:src="@drawable/sigma"
                android:layout_width="50dp"
                android:layout_height="50dp"/>

            <LinearLayout
                android:layout_marginStart="55dp"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/author"
                    android:text="mirakpjcppr"
                    android:layout_width="150dp"
                    android:textSize="15sp"
                    android:fontFamily="monospace"
                    android:padding="3sp"
                    android:textColor="#03A9F4"
                    android:layout_marginTop="10dp"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/time"
                    android:text="13:28:32 29.мая.2020"
                    android:layout_width="wrap_content"
                    android:textSize="15sp"
                    android:fontFamily="monospace"
                    android:padding="3sp"
                    android:textColor="#03A9F4"
                    android:layout_marginBottom="7sp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/heading"
                android:fontFamily="monospace"
                android:textColor="#C4B7B7"
                android:padding="3sp"
                android:layout_marginEnd="100dp"
                android:text="Programming"
                android:layout_alignParentEnd="true"
                android:textAlignment="textEnd"
                android:layout_marginBottom="7sp"
                android:layout_marginTop="10dp"
                android:textSize="15sp">

            </TextView>

            <Button
                android:id="@+id/close"
                android:fontFamily="monospace"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button"
                android:layout_marginBottom="7sp"
                android:layout_marginTop="5dp"
                android:text="@string/close"
                android:layout_alignParentRight="true"
                android:textAllCaps="false" />
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtTitle"
            android:textColor="#C4B7B7"
            android:fontFamily="monospace"
            android:layout_marginTop="10sp"
            android:layout_below="@+id/heading"
            android:text="Title"
            android:textAppearance="@android:style/TextAppearance.Large">

        </TextView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/image_link"
            android:text=""
            android:visibility="gone"
            android:layout_below="@id/picture">
        </TextView>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:id="@+id/picture"
            android:scaleType="centerCrop"
            android:layout_marginTop="7sp"
            android:layout_marginBottom="7dp"
            android:adjustViewBounds="true"
            android:src="@drawable/ic_launcher_foreground"
            android:layout_below="@id/txtTitle">
        </ImageView>


        <TextView
            android:id="@+id/txtDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/picture"
            android:text="Description"

            android:textAppearance="@android:style/TextAppearance.Medium"
            android:textColor="#C4B7B7" />

        <com.luseen.autolinklibrary.AutoLinkTextView
            android:id="@+id/tags"
            android:text="#tag"
            android:textSize="18sp"
            android:layout_marginTop="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_marginTop="5sp"
            android:layout_height="wrap_content">

            <RatingBar
                android:id="@+id/rating"
                style="?android:attr/ratingBarStyle"
                android:theme="@style/PostPageRatingBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/middle_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:layout_marginEnd="10sp"
                android:layout_alignParentEnd="true">

            </TextView>
        </RelativeLayout>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/reject"
                android:text="@string/refuse"
                android:background="@drawable/button_refuse"
                android:layout_width="wrap_content"
                android:visibility="gone"
                android:layout_height="match_parent"
                android:layout_marginLeft="40sp"
                >

            </Button>
            <Button
                android:id="@+id/ok"
                android:text="@string/ok"
                android:background="@drawable/button_ok"
                android:layout_width="0dp"
                android:visibility="gone"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginStart="80sp"
                android:layout_marginEnd="40sp"
                >
            </Button>

        </LinearLayout>
        <ListView
            android:id="@+id/comments"
            android:layout_width="match_parent"
            android:layout_height="150dp" />

        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/leave_a_comment"
                android:hint="Leave a comment"
                android:textColor="#E21F1F"
                android:textColorHint="#7C7373"
                android:inputType="textLongMessage"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>

            <Button
                android:id="@+id/send_comment"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:text="Send"
                android:background="@drawable/button"
                android:layout_marginRight="10dp"/>

        </RelativeLayout>


    </LinearLayout>
</ScrollView>