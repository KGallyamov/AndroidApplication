<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#353E4f">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:background="@drawable/toolbar"
            android:layout_height="70sp">
            <TextView
                android:id="@+id/exit"
                android:textSize="25sp"
                android:fontFamily="monospace"
                android:gravity="center_vertical"
                android:paddingTop="5dp"
                android:textColor="#C4B7B7"
                android:background="@drawable/ic_arrow_back_black_24dp"
                android:paddingStart="10dp"
                android:paddingBottom="5dp"
                android:layout_width="90dp"
                android:layout_height="match_parent">

            </TextView>



        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/avatar"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:src="@drawable/sigma8"
                android:paddingBottom="30sp"
                android:paddingTop="30sp"
                android:layout_gravity="left">

            </ImageView>
            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/login"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Login"
                    android:textAllCaps="false"
                    android:layout_marginTop="5sp"
                    android:layout_weight="1"
                    android:textColor="#C4B7B7"
                    android:textSize="20sp"/>
                <TextView
                    android:id="@+id/role"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textAllCaps="false"
                    android:text="role"
                    android:textAlignment="textEnd"
                    android:padding="5dp"
                    android:layout_weight="2"
                    android:textColor="#03A9F4"
                    android:textSize="13sp" />
                <TextView
                    android:id="@+id/lastSeen"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="online"
                    android:padding="5dp"
                    android:textAllCaps="false"
                    android:layout_weight="3"
                    android:textColor="#03A9F4"
                    android:textSize="13sp"/>
                <Button
                    android:id="@+id/start_converstaion"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Message"
                    android:padding="3dp"
                    android:background="@drawable/write_message_button"
                    android:layout_marginStart="10dp"
                    android:textAllCaps="false"
                    android:layout_marginTop="5sp"
                    android:layout_weight="1"
                    android:textColor="#FFFEFE"
                    android:textSize="15sp"/>




            </LinearLayout>
        </LinearLayout>
        <RelativeLayout
            android:paddingStart="5dp"
            android:paddingEnd="10dp"
            android:layout_marginTop="50dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/posts_send"
                android:text="@string/posts_send"
                android:textColor="#C4B7B7"
                android:textSize="20sp"
                android:layout_alignParentStart="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/posts"
                android:text="10"
                android:textSize="20sp"
                android:textColor="#03A9F4"
                android:layout_alignParentEnd="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:paddingTop="20dp"
            android:id="@+id/users_posts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>


</ScrollView>