<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#353E4f"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/user_data"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_weight="1"
            android:id="@+id/avatar"
            android:src="@drawable/sigma"
            android:layout_width="40dp"
            android:layout_height="40dp"/>
        <TextView
            android:id="@+id/author"
            android:text="Author"
            android:textSize="15sp"
            android:layout_weight="4"
            android:paddingTop="4dp"
            android:fontFamily="monospace"
            android:textColor="#03A9F4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/time"
            android:text="22:22 30 april"
            android:textSize="10sp"
            android:paddingRight="5sp"
            android:textAlignment="textEnd"
            android:paddingTop="5dp"
            android:fontFamily="monospace"
            android:textColor="#03A9F4"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>


    <RelativeLayout
        android:orientation="horizontal"
        android:layout_below="@+id/user_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/main_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="monospace"
            android:text="Comment"
            android:textAlignment="textStart"
            android:textColor="#C4B7B7"
            android:textSize="20sp" />
        <LinearLayout
            android:layout_alignParentEnd="true"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/down"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="monospace"
                android:background="@drawable/ic_thumb_down_24dp"
                android:textAlignment="textStart"
                android:textColor="#C4B7B7"
                android:textSize="20sp" />
            <TextView
                android:id="@+id/result_likes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="monospace"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:text="20"
                android:textAlignment="textStart"
                android:textColor="#C4B7B7"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/up"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="monospace"
                android:background="@drawable/ic_thumb_up_24dp"
                android:textAlignment="textStart"
                android:textColor="#C4B7B7"
                android:textSize="20sp" />

        </LinearLayout>





    </RelativeLayout>


</RelativeLayout>